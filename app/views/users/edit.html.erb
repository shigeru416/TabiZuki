<div class="container-fluid">
	<div class="row">
		<div class="col-10 offset-1">
			<div class="row">
				<div class="col-lg-4">
					<div class="user_infomation_title">
						<%= form_for @user do |f| %>
						<div class="row">
							<div class="col-12 text-center">
								<%= f.text_field :name, autofocus: true, placeholder: "ニックネーム" %>
							</div>
						</div>
					</div>

					<div class="user_infomation">
						<div class="row" style="margin-bottom: 30px;">
							<div class="col-12 text-center">
								<%= attachment_image_tag(@user, :image, size:'150x150', class: "rounded-circle  img", fallback: "no_image.jpg") %>
								<%= f.attachment_field :image, autofocus: true %>
							</div>
						</div>
						<div class="row" style="margin-bottom: 10px;">
							<div class="col-12 text-center">
								<%= f.text_area :introduction, autofocus: true, placeholder: "紹介文"%><br >
								<%= f.submit "更新する" %>
							</div>
						</div>
						<% end %>
						<div class="row" style="margin-bottom: 50px;">
							<div class="col-12 text-center">
								パスワード・メールアドレス・退会は<%= link_to "こちら", edit_user_registration_path, data: {"turbolinks" => false} %>
							</div>
						</div>
						<div class="row">
							<div class="col-10 offset-1">
								<div class="row">
									<div class="col-4 text-center">
										<p>投稿：<%= link_to "#{@user.posts.count}", user_path(@user) %></p>
									</div>
									<div class="col-4 text-center">
										<p>フォロー：</p>
									</div>
									<div class="col-4 text-center">
										<p>フォロワー：</p>
									</div>
								</div>
							</div>

						</div>
						<div class="row" style="margin-bottom: 50px;">
							<div class="col-10 offset-1">
								<div class="row">
									<div class="col-12 text-center">
										<%= link_to "フォローする", "#", class: "btn"%>
										<%= link_to "チャットする", "#", class: "btn"%>
									</div>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="col-12 text-center">
								<p>行きたい旅リスト</p>
							</div>
						</div>
						<div class="row" style="margin-bottom: 50px;">
							<div class="col-12">
								<div class="row">
									<% @user.wannago_lists.each do |wannago_list|%>
										<div class="col-4 text-right">
											<%= link_to post_path(wannago_list.post), data: {"turbolinks" => false } do %>
												<%= attachment_image_tag(wannago_list.post.post_images.first, :image, :fill, 50, 50, fallback: "no_image.jpg", class: "rounded-circle") %>
											<% end %>
										</div>
										<div class="col-8">
											<%= link_to "#{wannago_list.post.title}", post_path(wannago_list.post), data: {"turbolinks" => false } %>
										</div>
									<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-8">
					<div class="row">
						<div class="col-12 text-center">
							<p>旅投稿一覧</p>
						</div>
					</div>
					<div class="row">
						<% @user.posts.order(created_at: :desc).each do |post| %>
							<div class="col-4">
								<div class="row">
									<div class="col-12 text-center">
										<%= link_to post_path(post), data: {"turbolinks" => false } do %>
											<%= attachment_image_tag(post.post_images.first, :image, fallback: "no_image.jpg", class: "user_postimg rounded-lg") %>
										<% end %>
									</div>
								</div>
								<div class="row">
									<div class="col-12 text-center">
										<%= link_to "#{post.title}", post_path(post), data: {"turbolinks" => false } %>
									</div>
								</div>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
