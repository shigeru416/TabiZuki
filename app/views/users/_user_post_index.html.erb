<div class="row">
	<div class="col-12 text-center" style="margin-top:32px;">
		<p>旅投稿一覧</p>
	</div>
</div>
<div class="row">
	<% if user.posts.count >0 %>
		<% posts.each do |post| %>
			<div class="col-sm-4 col-12" style="margin-top:1vw;">
				<div class="row post_img">
					<div class="col-12 text-center">
						<%= link_to post_path(post), data: {"turbolinks" => false } do %>
							<%= attachment_image_tag(post.post_images.first, :image, :fill, 500, 450, fallback: "no_image.jpg", class: "user_postimg rounded-lg mybox") %>
						<% end %>
					</div>
				</div>
			</div>
		<% end %>
	<% else %>
		<div class="col-12 text-center">
			<p>旅を投稿してみよう</p>
		</div>
	<% end %>
</div>