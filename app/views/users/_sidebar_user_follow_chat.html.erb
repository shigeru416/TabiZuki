<div class="row" style="margin-bottom: 10px;">
	<div class="col-10 offset-1">
		<div class="row">
			<div class="col-12 text-center">
				<% if current_user != user %>
				  <% if current_user.following?(user) %>
				    <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn btn-info", style: "margin-top:10px;" %>
				  <% else %>
				    <%= link_to 'フォローする', user_relationships_path(user.id), method: :POST, class: "btn btn-info", style: "margin-top: 10px;" %>
				  <% end %>

					<%= link_to "チャットする", chat_path(user), class: "btn btn-info", style: "margin-top:10px;", data: {"turbolinks" => false } %>
				<% end %>
			</div>
		</div>
	</div>
</div>