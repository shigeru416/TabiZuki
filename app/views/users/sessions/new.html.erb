<div class="container-fluid">
  <div class="row justify-content-center" style="margin-top:10vh;">
    <div class="col-xl-6 col-sm-7">
      <%= render "users/registrations/slider" %>
    </div>
    <div class="col-xl-3 col-sm-5">

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <% flash.each do |key, value| %>
            <%= content_tag(:div, value, class: "#{key}") %>
        <% end %>

        <div class="field">
          <%= f.label :email, :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, :次回から自動でログイン %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-outline-info" %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>

    </div>
  </div>
</div>
