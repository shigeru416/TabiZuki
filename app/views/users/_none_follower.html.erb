<div class="container-fluid">
  <div class="row">
    <div class="col-10 offset-1">
      <div class="row">
        <div class="col-lg-4">
          <div class="user_infomation_title text-center">
              <p>
                <%= @user.name %>
                <% if @user == current_user %>
                  <%= link_to "", edit_user_path(@user), class: "fas fa-user-edit", data: {"turbolinks" => false} %>
                <% end %>
              </p>
          </div>
          <div class="user_infomation">
            <div class="row">
              <div class="col-12 text-center">
                <%= attachment_image_tag(@user, :image, size:'150x150', class: "rounded-circle  img", fallback: "no_image.jpg") %>
              </div>
            </div>
            <div class="row">
              <div class="col-12 text-center">
                <%= @user.introduction %>
              </div>
            </div>
            <div class="row">
              <div class="col-12">
                <div class="row">
                  <div class="col-4 text-center">
                    <p>投稿：<%= link_to "#{@user.posts.count}", user_path(@user) %></p>
                  </div>
                  <div class="col-4 text-center">
                    <p>フォロー：<%= link_to @user.follower.count, user_follows_path(@user) %></p>
                  </div>
                  <div class="col-4 text-center">
                    <p>フォロワー：<%= link_to @user.followed.count, user_followers_path(@user) %></p>
                  </div>
                </div>
              </div>

            </div>
            <div class="row" style="margin-bottom: 50px;">
              <div class="col-10 offset-1">
                <div class="row">
                  <div class="col-12 text-center">
                    <% if current_user != @user %>
                      <% if current_user.following?(@user) %>
                        <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete, class: "btn btn-success", style: "margin-top:10px;" %>
                      <% else %>
                        <%= link_to 'フォローする', user_relationships_path(@user.id), method: :POST, class: "btn btn-success", style: "margin-top: 10px;" %>
                      <% end %>

                      <%= link_to "チャットする", "#", class: "btn btn-success", style: "margin-top:10px;" %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
            <div class="row">
              <div class="col-12 text-center">
                <p>行きたい旅リスト</p>
              </div>
            </div>
            <div class="row" style="margin-bottom: 50px;">
              <div class="col-12">
                <div class="row">
                  <% if @user.wannago_lists.count > 0 %>
                    <% @user.wannago_lists.each do |wannago_list|%>
                      <div class="col-4 text-right">
                        <%= link_to post_path(wannago_list.post), data: {"turbolinks" => false } do %>
                          <%= attachment_image_tag(wannago_list.post.post_images.first, :image, :fill, 50, 50, fallback: "no_image.jpg", class: "rounded-circle") %>
                        <% end %>
                      </div>
                      <div class="col-8">
                        <%= link_to "#{wannago_list.post.title}", post_path(wannago_list.post), data: {"turbolinks" => false } %>
                      </div>
                    <% end %>
                  <% else %>
                    <div class="col-12 text-center">
                      <p>行きたい旅を見つけよう</p>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-8">
          <div class="row">
            <div class="col-12 text-center">
              <p>フォロー一覧</p>
            </div>
          </div>
          <div class="row">
            <div class="col-10 offset-1 text-center">
              <p>フォローしてみよう</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>