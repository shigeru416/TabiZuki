<div class="row">
	<div class="col-12 text-center" style="margin-top:32px;">
		<p>行きたい旅一覧</p>
	</div>
</div>
<div class="row">
	<% if user.wannago_lists.count > 0 %>
			<% posts.each do |wannago_list|%>
			<div class="col-sm-4 col-12" style="margin-bottom:5vh">
				<div class="row post_img">
					<div class="col-12 text-center">
						<%= link_to post_path(wannago_list.post), data: {"turbolinks" => false } do %>
							<%= attachment_image_tag(wannago_list.post.post_images.first, :image, :fill, 500, 450, fallback: "no_image.jpg", class: "rounded-lg mybox") %>
						<% end %>
					</div>
				</div>
				<div class="row">
					<div class="col-2" style="margin-top:0.5vh">
						<div class="row">
							<div class="col-12">
								<p style="font-size:13px;"><%= l(wannago_list.post.created_at, format: :year) %></p>
								<p style="font-size:17px; margin-top: -15px; margin-bottom: -10px;"><strong><%= l(wannago_list.post.created_at, format: :short) %></strong>
								</p>
							</div>
						</div>
					</div>
					<div class="col-8 offset-1" style="margin-top:0.5vh">
						<p style="font-size:20px;"><%= link_to "#{wannago_list.post.title}", post_path(wannago_list.post), style:"word-break: break-word;", data: {"turbolinks" => false }  %></p>
					</div>
				</div>
			</div>
		<% end %>
	<% else %>
		<div class="col-12 text-center">
			<p>行きたい旅がありません</p>
		</div>
	<% end %>
</div>