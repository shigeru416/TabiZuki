<section class="slice sct-color-1">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="row">
          <div class="col-md-6 col-md-offset-3 post_image_form">
            <div class="section-title-wrapper style-1 v1">
              <h3 class="section-title section-title-sm left">
                <span>画像投稿フォーム</span>
              </h3>
            </div>
            <%= form_for(@vision_image, url: vision_images_path) do |f| %>
              <div class="row">
                <div class="col-sm-12">
                  <%= attachment_image_tag(@vision_image, :image, id: "preview", class: "vision-new", fallback: "no_image.jpg") %>
                  <%= f.attachment_field :image, id: :item_img, class: "vision_image" %>
                </div>
              </div>
              <%= f.submit "送信", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
