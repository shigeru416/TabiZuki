<p><%= post.post_comments.count %>件のコメント</p>
<table class="table">
	<% post.post_comments.each do |post_comment| %>
	<tr>
		<td width="30">
			<%= link_to admins_user_path(post_comment.user) do %>
				<%= attachment_image_tag(post_comment.user, :image, :fill, 40, 40, class: "rounded-circle float-left img", fallback: "no-image-mini.jpg") %>
			<% end %>
		</td>
		<td width="130">
			<p><%= link_to "#{post_comment.user.name}", admins_user_path(post_comment.user), class: "links" %></p>
		</td>
		<td>
			<p><%=safe_join(post_comment.comment.split("\n"),tag(:br))%></p>
		</td>
		<td width="130">
			<%= post_comment.created_at.strftime('%Y/%m/%d') %>
			<%= link_to '', admins_post_post_comments_path(post_comment), method: :delete, class: "far fa-trash-alt", remote: true %>
		</td>
	</tr>
	<% end %>
</table>