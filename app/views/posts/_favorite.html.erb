<% if post.favorited_by?(current_user) %>
	<%= link_to post_favorites_path(post), class: "icons", method: :delete, remote: true do %> 
		<i class="fas fa-heart" style="color:#D93177;"><%= post.favorites.count %></i>
	<% end %> 
<% else %>
	<%= link_to post_favorites_path(post), class: "icons", method: :post, remote: true do %> 
		<i class="far fa-heart" style="color:#777777;"><%= post.favorites.count %></i> 
	<% end %> 
<% end %>