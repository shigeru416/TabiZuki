<div class="container-fluid">
	<div class="row">
		<div class="col-10 offset-1">
			<div class="row">
				<div class="col-lg-8">
					<div class="row">
						<div class="col-lg-12">
							<div class="clearfix">
								<div class="wannago">
									<%= render "wannago", post: @post %>
								</div>
								<div class="favorite">
									<%= render "favorite", post: @post %>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="bxslider2">
								<% @post.post_images.each do |image|%>
									<%= attachment_image_tag image, :image,fallback: "no_image.jpg", class: "postimg" %>
								<% end %>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<%= @post.content %>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<%= @post.tips %>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<%= @post.course%>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-5">
							<div>
								<% @post.tags.each do |tag| %>
									<%= tag.name %>
								<% end %>
							</div>
							<div>投稿者：<%= @post.user.name %>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="comments">
								<%= render "comments", post: @post %>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="comment-form">
								<%= render "comment_form", post: @post, post_comment: @post_comment %>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="row">
						<div class="col-lg-12">
							グーグルマップ
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							直前の閲覧履歴
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

