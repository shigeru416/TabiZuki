<div class="container-fluid">
	<div class="row">
		<div class="col-10 offset-1">
			<div class="row">
				<div class="col-lg-8">
					<div class="row">
						<div class="col-lg-12">
							<div class="clearfix">
								<% if current_user == @post.user %>
									<%= link_to "編集する", edit_post_path(@post), class: "btn btn-xs btn-success"%>
									<%= link_to '削除する', post_path(@post), method: :delete, class: "btn btn-xs btn-success" %>
								<% end %>
							</div>
							<div class="clearfix">
								<div class="wannago">
									<%= render "wannago", post: @post %>
								</div>
								<div class="favorite">
									<%= render "favorite", post: @post %>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="bxslider2">
								<% @post.post_images.each do |image|%>
									<%= attachment_image_tag image, :image, fallback: "no_image.jpg", class: "postimg" %>
								<% end %>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<%= @post.content %>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<%= @post.tips %>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<%= @post.course%>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-5">
							<div>
								<% @post.tags.each do |tag| %>
									<%= tag.name %>
								<% end %>
							</div>
							<div>投稿者：<%= link_to "#{@post.user.name}", user_path(@post.user), data: {"turbolinks" => false } %>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="comments">
								<%= render "comments", post: @post %>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="comment-form">
								<%= render "comment_form", post: @post, post_comment: @post_comment %>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="row">
						<div class="col-lg-12">
							グーグルマップ
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="row">
								<div class="col-12 text-center">
									閲覧履歴
								</div>
							</div>
							<div class="row">
								<div class="col-12">
									<div class="row">
										<% current_user.browsing_histories.each do |browsing_history| %>
												<div class="col-3 text-center" style="margin-top:20px;">
													<%= attachment_image_tag(browsing_history.post.post_images.first, :image ,fallback: "no_image.jpg", class: "browsing_history_img rounded-lg") %>
												</div>
												<div class="col-9" style="margin-top:20px;">
													<%= browsing_history.post.title %>
												</div>
										<% end %>
									</div>	
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

