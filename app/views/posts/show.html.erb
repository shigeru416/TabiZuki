<div class="container-fluid">
	<div class="row">
		<div class="col-10 offset-1">
			<div class="row">
				<div class="col-lg-8">
					<div class="row">
						<div class="col-lg-12" style="margin-top:20px;">
							<div class="clearfix">
								<% if current_user == @post.user %>
									<%= link_to "編集する", edit_post_path(@post), class: "btn btn-info"%>
									<%= link_to '削除する', post_path(@post), method: :delete, class: "btn btn-info" %>
								<% end %>
							</div>
							<div class="clearfix">
								<div class="post_title">
									<%= @post.title%>
								</div>
								<div class="wannago">
									<%= render "wannago", post: @post %>
								</div>
								<div class="favorite">
									<%= render "favorite", post: @post %>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="bxslider1">
								<% @post.post_images.each do |image|%>
										<%= attachment_image_tag image, :image, fallback: "no_image.jpg", class: "posting_img" %>
								<% end %>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<p>投稿者：<%= link_to "#{@post.user.name}", user_path(@post.user), data: {"turbolinks" => false } %></p>
							<p><%= @post.content %></p>
						</div>
					</div>
					<div class="row" style="margin-top:1vw;">
						<div class="col-lg-12">
							<p>Tips:</p>
							<p><%= @post.tips %></p>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12" style="margin-top:1vw;">
							<p>おすすめコース</p>
							<p><%= @post.course%></p>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-5">
							<div>
								<% @post.tag_list.each do |tag| %>
									<span class="tag-badge">
										<%= link_to tag, posts_path(tag_name: tag), style: "color:white;", data: {"turbolinks" => false} %>
									</span>
								<% end %>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12" style="margin-top:60px;">
							<div class="comments">
								<%= render "comments", post: @post %>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-lg-12">
							<div class="comment-form" style="margin-bottom:30px;" >
								<%= render "comment_form", post: @post, post_comment: @post_comment %>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-4">
					<div class="row">
						<div class="col-12" style="margin-top:20px;">
							グーグルマップ
						</div>
					</div>
					<div class="browsing_history_content">
						<div class="row">
							<div class="col-10 offset-1">
								<div class="row post_img">
									<% current_user.browsing_histories.order(created_at: :desc).each do |browsing_history| %>
											<div class="col-5" style="margin-top:20px;">
												<%= link_to post_path(browsing_history.post), data: {"turbolinks" => false} do%>
													<%= attachment_image_tag(browsing_history.post.post_images.first, :image ,fallback: "no_image.jpg", class: "browsing_history_img rounded-lg") %>
												<% end %>
											</div>
											<div class="col-7" style="margin-top:20px;">
												<%= link_to "#{browsing_history.post.title}", post_path(browsing_history.post), data: {"turbolinks" => false } %>
												<p><%= browsing_history.post.content.truncate(28) %></p>
											</div>
									<% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

