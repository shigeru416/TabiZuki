<div class="col-lg-3" style="margin-top:30px; margin-bottom:30px;" >
	<div class="row">
			<div class="col-12 text-center title">
				<strong>Category</strong>
			</div>
	</div>
	<div class="row">
		<% categories.each do |category| %>
			<div class="col-6 text-center">
				<%= link_to category_path(category), data: {"turbolinks" => false}, class: "btn cp_btn", style:"margin-bottom:15px;" do %>
				 <p class="name_button" style="margin-top:15px;"><%= category.name %></p>
				<% end %>
			</div>
		<% end %>
	</div>
</div>