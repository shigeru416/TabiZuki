<div id="keyimg">
	<ul class="bxslider1">
	  <li><%= image_tag "home_image1.jpg", class: "slide_image" %></li>
	  <li><%= image_tag "home_image2.jpg", class: "slide_image" %></li>
	  <li><%= image_tag "home_image3.jpg", class: "slide_image" %></li>
	  <li><%= image_tag "home_image4.jpg", class: "slide_image" %></li>
	  <li><%= image_tag "home_image5.jpg", class: "slide_image" %></li>
	</ul>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-12 text-center">
			<p>タイムライン</p>
		</div>
	</div>


	<div class="row">
		<div class="col-12">
			<div class="row">
				<% if @user_posts.present? %>
					<% @user_posts.each do |follower_post|%>
						<div class="col-4">
							<div class="row">
								<div class="col-12 text-center">
									<%= link_to post_path(follower_post), data: {"turbolinks" => false } do %>
										<%= attachment_image_tag(follower_post.post_images.first, :image, fallback: "no_image.jpg", class: "follower_img rounded-lg") %>
									<% end %>
								</div>
							</div>
							<div class="row">
								<div class="col-12 text-center">
									<%= link_to "#{follower_post.title}", post_path(follower_post), data: {"turbolinks" => false }%>
								</div>
							</div>
						</div>
					<% end %>
				<% elsif %>
					<div class="col-12 text-center">
						<p>
							表示できるタイムラインがありません<br >
							フォローしてみましょう
						</p>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			グーグルマップ
		</div>
	</div>
</div>

