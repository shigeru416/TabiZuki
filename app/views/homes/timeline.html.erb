<div class="container-fluid fixed-bg bg01">
	<div class="row">
		<div class="col-12 text-center" style="margin-top:40px;">
			<span class="timeline_title"><strong>Time Line</strong></span>
		</div>
	</div>


	<div class="row">
		<div class="col-12"  style="margin-top:40px; margin-bottom:200px;">
			<div class="row">
				<% if @user_posts.present? %>
					<% @user_posts.each do |follower_post|%>
						<div class="col-3">
							<div class="row">
								<div class="col-12 text-center">
									<%= link_to post_path(follower_post), data: {"turbolinks" => false } do %>
										<div><%= attachment_image_tag(follower_post.post_images.first, :image, fallback: "no_image.jpg", class: "post_image rounded-lg") %>
										</div>
									<% end %>
								</div>
							</div>
							<div class="row">
								<div class="col-12 text-center">
									<%= link_to "#{follower_post.title}", post_path(follower_post), data: {"turbolinks" => false }%>
								</div>
							</div>
						</div>
					<% end %>
				<% elsif %>
					<div class="col-12 text-center">
						<p>
							表示できるタイムラインがありません<br >
							フォローしてみましょう
						</p>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			グーグルマップ
		</div>
	</div>
</div>

