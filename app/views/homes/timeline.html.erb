<div class="container-fluid">
	<div class="row">
		<div class="col-12 fixed-bg bg01 box">
			<p class="timeline_title"><strong>Time Line</strong></p>
		</div>
	</div>

	<div class="row bg-color01">
		<div class="col-10 offset-1" style="margin-top:5vw; margin-bottom:5vw;">
			<div class="row">
				<% if @user_posts.present? %>
					<% @posts.each do |follower_post|%>
						<div class="col-sm-3 col-12">
							<div class="row post_img">
								<div class="col-12 text-center" style="margin-top:1vw;" >
									<%= link_to post_path(follower_post), data: {"turbolinks" => false } do %>
										<%= attachment_image_tag(follower_post.post_images.first, :image, :fill, 500, 450, fallback: "no_image.jpg", class: "rounded-lg mybox") %>
									<% end %>
								</div>
							</div>
							<div class="row">
								<div class="col-1" style="margin-top:0.5vh">
									<div class="row">
										<div class="col-12">
											<p style="font-size:13px;"><%= l(follower_post.created_at, format: :year) %></p>
											<p style="font-size:17px; margin-top: -15px; margin-bottom: -10px;"><strong><%= l(follower_post.created_at, format: :short) %></strong>
											</p>
											<% if post.created_at.in_time_zone('Japan').strftime("%Y/%m/%d").include?(Date.today.in_time_zone('Japan').strftime("%Y/%m/%d")) == true %>
												<div style="color:red; font-size:14px; margin-top:10px;">New!</div>
											<% end %>
										</div>
									</div>
								</div>
								<div class="col-8 offset-1" style="margin-top:0.5vh">
									<p style="font-size:20px;"><%= link_to "#{follower_post.title}", post_path(follower_post), class: "links", style:"word-break: break-word;", data: {"turbolinks" => false }  %></p>
								</div>
							</div>
						</div>
					<% end %>
				<% elsif %>
					<div class="col-12 text-center">
						<p>
							表示できるタイムラインがありません<br >
							フォローしてみましょう
						</p>
					</div>
				<% end %>
			</div>
			<%= render "homes/paginate", posts: @posts %>
		</div>
	</div>
</div>

