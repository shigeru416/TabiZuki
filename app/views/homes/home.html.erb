<div id="keyimg" style="margin-bottom:40px;">
	<ul class="bxslider1">
	  <li><%= image_tag "home_image1.jpg", class: "slide_image" %></li>
	  <li><%= image_tag "home_image2.jpg", class: "slide_image" %></li>
	  <li><%= image_tag "home_image3.jpg", class: "slide_image" %></li>
	  <li><%= image_tag "home_image4.jpg", class: "slide_image" %></li>
	  <li><%= image_tag "home_image5.jpg", class: "slide_image" %></li>
	</ul>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-10 offset-1">
			<div class="row">
				<div class="col-lg-9">
					<div class="row" style="margin-bottom:100px;">
						<div class="col-12">
							<div class="row">
								<div class="col-12 text-center">
									人気旅ランキング
								</div>
							</div>
							<div class="row">
								<div class="col-12">
									<div class="row">
										<% @posts.order(favorite_count: :desc).each do |post| %>
												<div class="col-2">
													<div class="row">
														<div class="col-12">
															<%= link_to post_path(post), data: {"turbolinks" => false } do %>
																<%= attachment_image_tag(post.post_images.first, :image, fallback: "no_image.jpg", class: "rounded-lg") %>
															<% end %>
														</div>
													</div>
													<div class="row">
														<div class="col-12">
															<%= link_to "#{post.title}", post_path(post), data: {"turbolinks" => false }  %>
														</div>
													</div>
												</div>
										<% end %>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-12">
							<div class="row">
								<div class="col-12 text-center">
									新着旅一覧
								</div>
							</div>
							<div class="row">
								<div class="col-12">
									<div class="row">
										<% @posts.order(created_at: :desc).each do |post| %>
												<div class="col-2">
													<div class="row">
														<div class="col-12">
															<%= link_to post_path(post), data: {"turbolinks" => false } do %>
																<%= attachment_image_tag(post.post_images.first, :image, fallback: "no_image.jpg", class: "rounded-lg") %>
															<% end %>
														</div>
													</div>
													<div class="row">
														<div class="col-12">
															<%= link_to "#{post.title}", post_path(post), data: {"turbolinks" => false }  %>
														</div>
													</div>
												</div>
										<% end %>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-3">
					<div class="row">
							<div class="col-12 text-center">
								カテゴリー一覧
							</div>
					</div>
					<div class="row justify-content-center">
						<% @categories.each do |category| %>
							<div class="col-6 text-center">
								<%= category.name %>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<dif class="col-12">
			グーグルマップ
		</dif>
	</div>
</div>