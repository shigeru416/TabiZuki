<div class="slidebox">
  <div class="bgImg src1"></div>
  <div class="bgImg src2"></div>
  <div class="bgImg src3"></div>
  <div class="bgImg src4"></div>
  <div class="bgImg src5"></div>
  <div class="boxString"><p class="home_title">見つかる。<br>あなた史上の旅。</p></div>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-10 offset-1">
			<div class="row">
				<div class="col-lg-9">
					<div class="row" style="margin-top:10vw; margin-bottom:10vw;">
						<div class="col-12">
							<div class="row">
								<div class="col-12 text-center">
									人気旅ランキング
								</div>
							</div>
							<div class="row">
								<div class="col-12">
									<div class="row">
										<% @posts.order(favorite_count: :desc).first(6).each do |post| %>
												<div class="col-4">
													<div class="row post_img">
														<div class="col-12 text-center">
															<%= link_to post_path(post), data: {"turbolinks" => false } do %>
																<%= attachment_image_tag(post.post_images.first, :image, fallback: "no_image.jpg", class: "ranking_img rounded-lg") %>
															<% end %>
														</div>
													</div>
													<div class="row">
														<div class="col-12 text-center">
															<%= link_to "#{post.title}", post_path(post), data: {"turbolinks" => false }  %>
														</div>
													</div>
												</div>
										<% end %>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-12 text-right" style="margin-top:1vw;">
									<%= link_to ">>もっと見る", ranking_path, data: {"turbolinks" => false} %>
								</div>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-12">
							<div class="row">
								<div class="col-12 text-center">
									新着旅一覧
								</div>
							</div>
							<div class="row">
								<div class="col-12">
									<div class="row">
										<% @posts.order(created_at: :desc).first(6).each do |post| %>
												<div class="col-4">
													<div class="row post_img">
														<div class="col-12 text-center">
															<%= link_to post_path(post), data: {"turbolinks" => false } do %>
																<%= attachment_image_tag(post.post_images.first, :image, fallback: "no_image.jpg", class: "new_img rounded-lg") %>
															<% end %>
														</div>
													</div>
													<div class="row">
														<div class="col-12 text-center">
															<%= link_to "#{post.title}", post_path(post), data: {"turbolinks" => false }  %>
														</div>
													</div>
												</div>
										<% end %>
									</div>
								</div>
							</div>
							<div class="row">
								<div class="col-12 text-right" style="margin-top:1vw;">
									<%= link_to ">>もっと見る", new_path, data: {"turbolinks" => false } %>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="col-lg-3" style="margin-top:10vw;">
					<div class="row">
							<div class="col-12 text-center">
								カテゴリー一覧
							</div>
					</div>
					<div class="row justify-content-center">
						<% @categories.each do |category| %>
							<div class="col-6 text-center">
								<%= category.name %>
							</div>
						<% end %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<dif class="col-12">
			グーグルマップ
		</dif>
	</div>
</div>