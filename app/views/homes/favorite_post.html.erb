<div id="keyimg" style="margin-bottom: 100px;">
	<ul class="bxslider1">
	  <li><%= image_tag "home_image1.jpg", class: "slide_image" %></li>
	  <li><%= image_tag "home_image2.jpg", class: "slide_image" %></li>
	  <li><%= image_tag "home_image3.jpg", class: "slide_image" %></li>
	  <li><%= image_tag "home_image4.jpg", class: "slide_image" %></li>
	  <li><%= image_tag "home_image5.jpg", class: "slide_image" %></li>
	</ul>
</div>

<div class="container-fluid">
	<div class="row">
		<div class="col-12 text-center">
			<p>お気に入り一覧</p>
		</div>
	</div>


	<div class="row">
		<div class="col-12">
			<div class="row">
				<% if @user_favorites.present? %>
					<% @user_favorites.each do |favorite|%>
						<div class="col-3">
							<div class="row">
								<div class="col-12 text-center">
									<%= link_to post_path(favorite.post), data: {"turbolinks" => false } do %>
										<%= attachment_image_tag(favorite.post.post_images.first, :image, fallback: "no_image.jpg", class: "post_image rounded-lg") %>
									<% end %>
								</div>
							</div>
							<div class="row">
								<div class="col-12 text-center">
									<%= link_to "#{favorite.post.title}", post_path(favorite.post), data: {"turbolinks" => false }%>
								</div>
							</div>
						</div>
					<% end %>
				<% elsif %>
					<div class="col-12 text-center">
						<p>
							お気に入りがありません
						</p>
					</div>
				<% end %>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-12">
			グーグルマップ
		</div>
	</div>
</div>

