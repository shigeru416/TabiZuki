<div class="container-fluid">
	<div class="row fixed-bg bg03">
		<div class="col-12 fixed-bg bg03 box">
			<p class="ranking_title"><strong>Ranking</strong></p>
		</div>
	</div>

	<div class="row bg-color03">
		<div class="col-10 offset-1" style="margin-top:5vw; margin-bottom:6vw;">
			<div class="row">
				<% @posts.each do |post| %>
						<div class="col-sm-3 col-12">
							<div class="row post_img">
								<div class="col-12 text-center" style="margin-top:1vw;" >
									<%= link_to post_path(post), data: {"turbolinks" => false } do %>
										<%= attachment_image_tag(post.post_images.first, :image, :fill, 500, 450, fallback: "no_image.jpg", class: "ranking_img rounded-lg mybox") %>
									<% end %>
								</div>
							</div>
							<div class="row">
								<div class="col-12 text-center" style="margin-top:1vw;">
									<%= link_to "#{post.title}", post_path(post), data: {"turbolinks" => false }  %>
								</div>
							</div>
						</div>
				<% end %>
			</div>
			<%= render "homes/paginate", posts: @posts %>
		</div>
	</div>
</div>

