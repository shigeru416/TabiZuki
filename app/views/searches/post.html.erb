<table>
  <thead>
    <tr>
      <th><%= sort_link(@search, :title) -%></th>
      <th><%= sort_link(@search, :content) -%></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title -%></td>
      <td><%= post.content -%></td>
    </tr>
    <% end %>
  </tbody>
</table>