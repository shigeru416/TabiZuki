<div class="slidebox">
  <div class="bgImg src1"></div>
  <div class="bgImg src2"></div>
  <div class="bgImg src3"></div>
  <div class="bgImg src4"></div>
  <div class="bgImg src5"></div>
  <div class="boxString"><p class="home_title">見つかる。<br>あなた史上の旅。</p></div>
</div>

<div class="container-fluid bgcolor07">
	<div class="row">
		<div class="col-10 offset-1">
			<div class="row">
				<div class="col-lg-9">
					<div class="row">
						<div class="col-12" style="margin-top:30px;">
							<div class="row">
								<div class="col-12 text-center title">
									<strong><%= @category.name %></strong>
								</div>
							</div>
							<div class="row">
								<div class="col-12">
									<div class="row">
										<% if @posts.present? %>
											<% @posts.each do |post| %>
													<div class="col-sm-4 col-12" style="margin-bottom:5vh">
														<div class="row post_img">
															<div class="col-12 text-center">
																<%= link_to post_path(post), data: {"turbolinks" => false } do %>
																	<%= attachment_image_tag(post.post_images.first, :image, :fill, 500, 450, fallback: "no_image.jpg", class: "rounded-lg mybox") %>
																<% end %>
															</div>
														</div>
														<div class="row">
															<div class="col-1" style="margin-top:0.5vh">
																<div class="row">
																	<div class="col-12">
																		<p style="font-size:13px;"><%= l(post.created_at, format: :year) %></p>
																		<p style="font-size:17px; margin-top: -15px; margin-bottom: -10px;"><strong><%= l(post.created_at, format: :short) %></strong>
																		</p>
																		<% if post.created_at.in_time_zone('Japan').strftime("%Y/%m/%d") == Time.current.in_time_zone('Japan').strftime("%Y/%m/%d")%>
																			<div style="color:red; font-size:14px; margin-top:10px;">New!</div>
																		<% end %>
																	</div>
																</div>
															</div>
															<div class="col-8 offset-1" style="margin-top:0.5vh">
																<p style="font-size:20px;"><%= link_to "#{post.title}", post_path(post), class: "links", style:"word-break: break-word;", data: {"turbolinks" => false }  %></p>
															</div>
														</div>
													</div>
											<% end %>
										<% else %>
											<div class="col-12 text-center">
												<p style="padding-top:50px;">表示できる投稿がありません</p>
											</div>
										<% end %>
									</div>
									<%= render "homes/paginate", posts: @posts %>
								</div>
							</div>
						</div>
					</div>
				</div>
				<%= render "homes/category_homes", categories: @categories %>
			</div>
		</div>
	</div>
</div>