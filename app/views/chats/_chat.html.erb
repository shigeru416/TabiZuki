<div class="container-fluid">
	<div class="row">
		<div class="col-lg-12 text-center">
			<h3 id="room" style="margin-top:50px;"><%= user.name %> さんとのチャット</h3>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<% chats.each do |chat| %>
				<% if chat.user_id == current_user.id %>
					<div class="row">
						<div class="col-12" style="word-break: break-word;">
							<p class="right_balloon"><%= chat.message %></p>
						</div>
					</div>
				<% else %>
					<div class="row">
						<div class="col-12 clearfix" style="word-break: break-word;">
							<div style="float:left;">
								<%= attachment_image_tag(user, :image, :fill, 80, 80,  fallback:"no_image.jpg", class: "rounded-circle", style: "margin-right:20px;", size: "80x80") %>
							</div>
							<div style="float:left;">
								<p class="left_balloon"><%= chat.message %></p>
							</div>
						</div>
					</div>
				<% end %>
			<% end %>
		</div>
	</div>
</div>
